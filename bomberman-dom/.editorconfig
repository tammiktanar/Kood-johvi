root = true

[*]
end_of_line = lf
charset = utf-8

[{*.ts,*.js,*.json}]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80

[*.html]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120
